{
  "name": "burni-website",
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tailwindcss -i ./src/css/styles.css -o ./assets/css/styles.min.css --watch",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./src/css/styles.css -o ./assets/css/styles.min.css --minify",
    "serve": "http-server . -p 8080 --config http-server.config.json",
    "build": "npm run build:css && echo Build erfolgreich abgeschlossen!",
    "start": "npm run build && npm run serve",
    "clean": "del-cli assets/css/*.min.css",
    "lint": "prettier --write \"**/*.{html,css,js}\" --ignore-path .gitignore",
    "lint:check": "prettier --check \"**/*.{html,css,js}\" --ignore-path .gitignore",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:e2e:install": "playwright install",
    "lighthouse": "lhci autorun",
    "validate": "html-validate index.html 404.html",
    "optimize": "npm run clean && npm run build && npm run lint",
    "ci": "npm run lint:check && npm run test && npm run build && npm run lighthouse"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.0",
    "@playwright/test": "^1.53.0",
    "@sentry/browser": "^9.29.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.7",
    "del-cli": "^6.0.0",
    "html-validate": "^9.5.5",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.4",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.4.17"
  }
}
